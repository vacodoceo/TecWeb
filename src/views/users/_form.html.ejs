<h1>Create User</h1>
<div>
    <form action="<%= submitPath %>" method="post">
      <% if (!user.isNewRecord) { %>
        <input type="hidden" name="_method" value="patch" />
      <% } %>
      <label for="firstName">
        <span>Nombre</span>
        <input type="text" name="firstName" id="firstName" value="<%= user.firstName %>" />
      </label>
      <label for="lastName">
        <span>Apellido</span>
        <input type="text" name="lastName" id="lastName" value="<%= user.lastName %>" />
      </label>
      <label for="email">
        <span>Email</span>
        <input type="text" name="email" id="email" value="<%= user.email%>" />
      </label>
      <label for="password">
        <span>Password</span>
        <input type="text" name="password" id="password" value="<%= user.password %>" />
      </label>
      <label for="location">
        <span>Direcci√≥n</span>
        <input type="text" name="location" id="location" value="<%= user.location %>" />
      </label>
      <div class="actions">
        <input type="submit" value="<%= user.isNewRecord ? 'Crear' : 'Editar' %>" />
      </div>
    </form>
  </div>